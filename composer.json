{
    "name": "shalom/shalom-factura",
    "description": "Sistema de Facturación Electrónica para Ecuador",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Shalom",
            "email": "desarrollo@shalom.ec"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-openssl": "*",
        "ext-soap": "*",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "tecnickcom/tcpdf": "^6.6",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Shalom\\Core\\": "core/",
            "Shalom\\Modules\\": "modules/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('config/config.local.php') || copy('config/config.php.example', 'config/config.local.php');\""
        ],
        "test": "phpunit"
    }
}
